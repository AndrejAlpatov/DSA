    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.4.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": [
            {
                "type": "Container",
                "height": "100vh",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundColor": "#099a0b"
                    },
                    {
                        "type": "Container",
                        "height": "100vh",
                        "width": "100vw",
                        "items": [
                            {
                                "type": "AlexaHeader",
                                "headerTitle": "Essensausgabe:",
                                "headerAttributionText": "HS-Worms",
                                "headerDivider": false
                            },
                            {
                                "type": "ScrollView",
                                "grow": 1,
                                "paddingTop": "@spacingMedium",
                                "paddingBottom": "${@spacing3XLarge + @spacingXSmall}",
                                "paddingLeft": "@marginHorizontal",
                                "paddingRight": "@marginHorizontal",
                                "items": [
                                    {
                                        "type": "Text",
                                        "id": "plantContent",
                                        "style": "textStyleDisplay4",
                                        "text": "Am Mittwoch den 02.02.2022 gibt es mensaVital Gem\u00fcse-Couscous-Pfanne mit Joghurt-Ingwer-Dip, Dessertauswahl und dazu eine Tagessuppe und ein Dessert nach Wahl ",
                                        "textAlign": "left"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}